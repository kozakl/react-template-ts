@import 'variables.pcss';

:root {
  --bg-color: #F1F3F4;
}

*,
*::before,
*::after {
  box-sizing: border-box;
}

body {
  background: var(--bg-color);
  color: var(--text-color-primary);
  font-family: var(--font-primary);
  font-weight: 300;
  margin: 0;
}

input, textarea, select {
  font-family: inherit;
  font-weight: inherit;
  font-size: inherit;
}
